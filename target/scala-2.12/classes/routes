# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~
->         /hmrc-frontend                      hmrcfrontend.Routes
# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /login                      controllers.LoginController.index()
GET     /create-an-account          controllers.RegisterController.init()
GET     /create-an-account/:id      controllers.RegisterController.index(id:Long)
POST    /create-an-account          controllers.RegisterController.create(mode:Mode = NormalMode)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Expenses
GET     /expense                    controllers.ExpenseController.index()

GET     /expense/:id                controllers.ExpenseController.show(id:Long)

POST    /expense                    controllers.ExpenseController.create(mode: Mode = NormalMode)
GET    /calculator                  controllers.CalculatorController.index()
POST   /calculator                  controllers.CalculatorController.calculate()
GET    /show/:id                    controllers.CalculatorController.show(id:Double)